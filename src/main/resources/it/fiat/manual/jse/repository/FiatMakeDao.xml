<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
		PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="it.fiat.manual.jse.repository.FiatMakeDao">



	<resultMap id="makeMap" type="it.fiat.manual.jse.model.FiatDocMake">
		<id property="brandCode" column="id" />
		<result property="description" column="name"/>
	</resultMap>

	<select id="getAll" resultMap="makeMap">
        SELECT * FROM MAKE;
    </select>

	<select id="delete" resultMap="makeMap">
        DELETE FROM MAKE WHERE ID = #{brandCode};

    </select>

	<select id="update" resultMap="makeMap">
        UPDATE MAKE  SET  NAME = #{description} WHERE ID =#{brandCode}
    </select>

	<select id="insert" resultMap="makeMap">
        INSERT INTO MAKE (RT_ID , ID, NAME ) VALUES (55, #{brandCode}, #{description});
    </select>

</mapper>